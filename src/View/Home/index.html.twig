{% extends 'layout.html.twig' %}

{% block content %}
<div class="container-fluid mt-5">
    {# <div class="col-8 m-auto">
        {% include 'Home/carousel.html.twig' %}
    </div> #}



    <div class="row p-lg-5">
        <div class="col-lg-2 col-md-2 col-xs-12">
                <a class="my-3" data-toggle="collapse" href="#collapseExample" role="button"
                    aria-expanded="false" aria-controls="collapseExample">
                    Filters
                </a>
            <div class="collapse" id="collapseExample">
                <form method="POST" class="mt-3">
                    <!-- Section: Condition -->
                    <section class="mb-4">
                        <h6 class="font-weight-bold mb-3">Brand</h6>
                        {% for brand in brands %}
                        <div class="form-check pl-4 mb-3">
                            <input type="checkbox" class="form-check-input filled-in" id="brand_id" name="brand_id"
                                value="{{brand.id}}">
                            <label class="form-check-label small text-uppercase card-link-secondary"
                                for="brand_id">{{brand.name}}</label>
                        </div>
                        {% endfor %}
                    </section>
                    <section class="mb-4">
                        <h6 class="font-weight-bold mb-3">Size</h6>
                        {% for size in sizes %}
                        <div class="form-check pl-4 mb-3">
                            <input type="checkbox" class="form-check-input filled-in" value={{size.id}} id="size"
                                name="size_id">
                            <label class="form-check-label small text-uppercase card-link-secondary"
                                for="size">{{size.size}}</label>
                        </div>
                        {% endfor %}
                    </section>
                    <!-- Section: Size -->
                    <!-- Section: Color -->
                    <section class="mb-4">
                        <h6 class="font-weight-bold mb-3">Color</h6>
                        <div class="btn-group btn-group-toggle btn-color-group d-block mt-n2 ml-n2"
                            data-toggle="buttons">
                            {% for color in colors %}
                            <label class="btn rounded-circle bg-{{color.name|lower}} p-3 m-2">
                                <input type="checkbox" autocomplete="off" value="{{color.id}}" name="color_id">
                            </label>
                            {% endfor %}
                        </div>
                    </section>
                    <!-- Section: Color -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </form>
            </div>



        </div>
        <div class="col-lg-10 col-md-10 col-xs-12">
            <form method="POST">
                <div class="row">
                    <div class="col-10">
                        <div class="form-group">
                            <input class="form-control" type="text" id="search" name="search"
                                placeholder="ex : air max">
                        </div>
                    </div>
                    <div class="col-2 text-center">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </form>
            <div class="text-right">
                <a href="/">All articles</a>
            </div>
            {% if session.flash_message is not empty %}
            {% for message in session.flash_message %}
            <div class="col-12">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>{{message}}</strong>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close" id="clear_flash">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
            {% endfor %}
            {% endif %}
            <div class="row">
                {% for article in articles %}
                <div class="col-lg-4 col-md-6 col-sm-12 my-3">
                    <div class="card">
                        <div class="mx-auto">
                            {% if article.images|length > 1 %}
                            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                                <div class="carousel-inner" style="height: 300px">
                                    <div class="carousel-item active">
                                        <img src="{{article.images[0].url}}" class="d-block w-100" alt="">
                                    </div>
                                    {% for i in 1..article.images|length - 1 %}
                                    <div class="carousel-item">
                                        <img src="{{article.images[i].url}}" class="d-block w-100" alt="">
                                    </div>
                                    {% endfor %}
                                </div>
                                <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                                    data-slide="prev">
                                    <span class="carousel-control-prev-icon text-dark" aria-hidden="true"></span>
                                    <span class="sr-only text-dark">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                                    data-slide="next">
                                    <span class="carousel-control-next-icon text-dark" aria-hidden="true"></span>
                                    <span class="sr-only text-dark">Next</span>
                                </a>
                            </div>
                            {% else %}
                            <img src="{{article.images[0].url}}" class="img-fluid" alt="" style="height: 300px">
                            {% endif %}
                        </div>
                        <div class="card-body">
                            <div class="card-body text-center">
                                <h5 class="card-title">{{article.model}} - {{article.brand_name}}</h5>
                                <p>{{article.price}} $</p>
                            </div>
                        </div>
                        <div class="card-footer">
                            <ul class="nav">
                                <li class="nav-item mx-auto">
                                    <a href="/home/showArticle/{{ article.id }}" class="btn btn-success"><i
                                            class="fas fa-eye"></i></a>
                                </li>
                                {% if session.username is not empty %}
                                {% if article.is_liked == true %}
                                <li class="nav-item mx-auto">
                                    <a href="/home/dislike/{{ article.id }}" class="btn btn-warning"><i
                                            class="fas fa-heart"></i></a>
                                </li>
                                {% else %}
                                <li class="nav-item mx-auto">
                                    <a href="/home/like/{{ article.id }}" class="btn btn-warning"><i
                                            class="far fa-heart"></i></a>
                                </li>
                                {% endif %}
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}