            <!-- Section: Size -->
            <section class="mb-4">
                <h6 class="font-weight-bold mb-3">Size</h6>
                {% for size in sizes %}
                <div class="form-check pl-4 mb-3">
                    <input type="checkbox" class="form-check-input filled-in" value={{size.id}} id="size"
                        name="size_id">
                    <label class="form-check-label small text-uppercase card-link-secondary"
                        for="size">{{size.size}}</label>
                </div>
                {% endfor %}
            </section>
            <!-- Section: Size -->
            <!-- Section: Color -->
            <section class="mb-4">
                <h6 class="font-weight-bold mb-3">Color</h6>
                <div class="btn-group btn-group-toggle btn-color-group d-block mt-n2 ml-n2" data-toggle="buttons">
                    {% for color in colors %}
                    <label class="btn rounded-circle bg-{{color.name|lower}} p-3 m-2">
                        <input type="checkbox" autocomplete="off" value="{{color.id}}" name="color_id">
                    </label>
                    {% endfor %}
                </div>
            </section>
            <!-- Section: Color -->
        </div>
        <div class="col-lg-10 col-md-10 col-xs-12">
            <form method="POST">
                <div class="row">
                    <div class="col-10">
                        <label for="serach">Model</label>
                        <div class="form-group">
                            <input class="form-control" type="text" id="search" name="search"
                                placeholder="ex : air max">
                        </div>
                    </div>
                    <div class="col-2 text-center">
                        <div class="form-group pt-4">
                            <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </form>
            <div class="text-right">
                <a href="/">Tous les articles</a>
            </div>
            {% if session.flash_message is not empty %}
            {% for message in session.flash_message %}
            <div class="col-12">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>{{message}}</strong>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close" id="clear_flash">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
            {% endfor %}
            {% endif %}
            <div class="row">
                {% for article in articles %}
                <div class="col-lg-3 col-md-6 col-sm-12 my-3">
                    <div class="card" style="height: 500px">
                        <div  style="height: 250px">
                            <img src="{{article.images[0].url}}" class="img-fluid" alt="air max 270">
                        </div>
                        <div class="card-body">
                            <div class="card-body text-center">
                                <h5 class="card-title">{{article.model}} - {{article.brand_name}}</h5>
                                <p>{{article.price}} $</p>
                            </div>
                        </div>
                        <div class="card-footer">
                            <ul class="nav">
                                <li class="nav-item mx-auto">
                                    <form method="POST">
                                        <input type="text" class="d-none" name="add_article" value="{{article.id}}">
                                        <button type="submit" class="btn btn-primary"><i
                                                class="fas fa-cart-arrow-down"></i></button>
                                    </form>
                                </li>
                                <li class="nav-item mx-auto">
                                    <a href="/home/showArticle/{{ article.id }}" class="btn btn-success"><i
                                            class="fas fa-eye"></i></a>
                                </li>
                                {% if session.username is not empty %}
                                {% if article.is_liked == true %}
                                <li class="nav-item mx-auto">
                                    <a href="/home/dislike/{{ article.id }}" class="btn btn-warning"><i
                                            class="fas fa-heart"></i></a>
                                </li>
                                {% else %}
                                <li class="nav-item mx-auto">
                                    <a href="/home/like/{{ article.id }}" class="btn btn-warning"><i
                                            class="far fa-heart"></i></a>
                                </li>
                                {% endif %}
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascript %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.0/axios.min.js"
    integrity="sha512-DZqqY3PiOvTP9HkjIWgjO6ouCbq+dxqWoJZ/Q+zPYNHmlnI2dQnbJ5bxAHpAMw+LXRm4D72EIRXzvcHQtE8/VQ=="
    crossorigin="anonymous"></script>
<script>
    $('#multi').mdbRange({
        single: {
            active: true,
            multi: {
                active: true,
                rangeLength: 1
            },
        }
    });
    const clearBtn = document.getElementById('clear_flash');
    if (clearBtn) {
        clearBtn.addEventListener('click', () => {
            axios.get('/home/clear_flash')
                .then(response => console.log(response))
        })
    }
</script>
{% endblock %}